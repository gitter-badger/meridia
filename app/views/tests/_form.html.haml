= form_for @test do |f|
  - if @test.errors.any?
    #error_explanation
      %h2= "#{pluralize(@test.errors.count, "error")} prohibited this test from being saved:"
      %ul
        - @test.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :observation
    = f.text_field :observation
  .field
    = f.label :description
    = f.text_field :description
  
  =f.fields_for :questions do |q|
    .form-group
      =q.label :content
      =q.text_field :content
  .actions
    = f.submit 'Save'
