= form_for @vig do |f|
  - if @vig.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vig.errors.count, "error")} prohibited this vig from being saved:"
      %ul
        - @vig.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :date
    = f.text_field :date
  .actions
    = f.submit 'Save'
