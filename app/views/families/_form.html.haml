= form_for @family do |f|
  - if @family.errors.any?
    #error_explanation
      %h2= "#{pluralize(@family.errors.count, "error")} prohibited this family from being saved:"
      %ul
        - @family.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :firstname
    = f.text_field :firstname
  .field
    = f.label :lastname
    = f.text_field :lastname
  .field
    = f.label :relationship
    = f.text_field :relationship
  .field
    = f.label :phone_home
    = f.text_field :phone_home
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :phone_mobile
    = f.text_field :phone_mobile
  .actions
    = f.submit 'Save'
