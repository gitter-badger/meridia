= render "shared/vig_menu"
- @lesson= (lessons @lessons)
.col-md-9
  .panel
    %h3 
      Horario
    = link_to "Editar Horario", new_vig_schedule_path(@member.vigs.last), class: "btn btn-success pull-right"

    %table.table
      %thead
        %tr
          %th
            Hora
          %th
            Lunes
          %th
            Martes
          %th
            Miercoles
          %th
            Jueves
          %th
            Viernes
          %th
            Sabado
      - (0..10).map do |hour|
        %tr
          %td
            = hour + 8
          %td
            =@lesson[hour][:monday].to_sentence(two_words_connector: '-')
          %td
            =@lesson[hour][:tuesday].to_sentence(two_words_connector: '-')
          %td
            =@lesson[hour][:wednesday].to_sentence(two_words_connector: '-')
          %td 
            =@lesson[hour][:thursday].to_sentence(two_words_connector: '-')
          %td 
            =@lesson[hour][:friday].to_sentence(two_words_connector: '-')
          %td 
            =@lesson[hour][:saturday].to_sentence(two_words_connector: '-')

