.form-group
  = form_for @additional_service do |f|
    - if @additional_service.errors.any?
      #error_explanation
        %h2= "#{pluralize(@additional_service.errors.count, "error")} prohibited this additional_service from being saved:"
        %ul
          - @additional_service.errors.full_messages.each do |msg|
            %li= msg
    .form-group
      = f.label :name ,"Nombre" , class: "col-sm-1 control-label"
      .col-sm-11
        = f.text_field :name , class: "form-control"
    .form-group 
      = f.label :price , "Precio" , class: "col-sm-1 control-label"
      .col-sm-11
        = f.text_field :price , class: "form-control"
    .form-group
      = f.label :description , "Descripci√≥n" , class: "col-sm-1 control-label"
      .col-sm-11
        = f.text_field :description , class: "form-control"
    .form-group
      = f.submit 'Guardar', class: "btn btn-primary"
