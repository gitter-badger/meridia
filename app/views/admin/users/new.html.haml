.panel
  = form_for @user ,:as=> :user, :url =>new_user_admin_users_path do |f|
    %p
      = f.label :name
      %br/
      = f.text_field :name
    %div
      = f.label :email
      %br/
      = f.email_field :email
    %div
      = f.label :password
      %br/
      = f.password_field :password
    %div
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation
    %div
      = f.select( :center_id, Center.all.collect {|a| [a.name, a.id]}) 
    %div
      = f.submit "Sign up"
