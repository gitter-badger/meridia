= form_for @messenger , url: user_messengers_path(current_user, @messenger) do |f|
  - if @messenger.errors.any?
    #error_explanation
      %h2= "#{pluralize(@messenger.errors.count, "error")} prohibited this messenger from being saved:"
      %ul
        - @messenger.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.text_field :subjet, class: "form-control", placeholder: "Asunto"
  .form-group
    = f.text_area :text, class: "form-control", placeholder: "Mensaje"
  .actions
    = f.submit 'Enviar', class: "btn btn-success pull-right"
.clearfix
