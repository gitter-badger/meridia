.panel
  - @lesson= (lessons @lessons)
  .row
    .col-md-4
      %h2
        Horario
    .col-md-3 
    .col-md-5
      = link_to "Crear Actividad", new_activity_path, class: "btn btn-success pull-right"
      = link_to "Lista de Actividades", activities_path, class: 'btn btn-success pull-right'
.panel
  %table.table
    %thead
      %tr
        %th
          hora
        %th
          Lunes
        %th
          Martes
        %th
          Miercoles
        %th
          Jueves
        %th
          Viernes
        %th
          Sabado
    %tbody
      -(0..10).map do |hour| 
        %tr
          %td
            =hour + 8
          %td
            =raw(@lesson[hour][:monday].to_sentence(two_words_connector: ' - '))
          %td
            =raw(@lesson[hour][:tuesday].to_sentence(two_words_connector: ' - '))
          %td
            =raw(@lesson[hour][:wednesday].to_sentence(two_words_connector: ' - '))
          %td
            =raw(@lesson[hour][:thursday].to_sentence(two_words_connector: ' - '))
          %td
            =raw(@lesson[hour][:friday].to_sentence(two_words_connector: ' - '))
          %td
            =raw(@lesson[hour][:saturday].to_sentence(two_words_connector: ' - '))
