    .panel
      :javascript
        $(function () {


        // Create the chart
        $('#container').highcharts({
        chart: {
        type: 'column'
        },
        title: {
        text: 'Dependencia de participantes'
        },
        xAxis: {
        type: 'category'
        },
        yAxis: {
        title: {
        text: 'Participantes'
        }
        },
        legend: {
        enabled: false
        },
        plotOptions: {
        series: {
        borderWidth: 0,
        dataLabels: {
          enabled: true,
            format: '{point.y:.1f}'
        }
        }
        },

        tooltip: {
        headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
        pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.y:.2f}</b> of total<br/>'
        }, 

        series: [{
        name: 'Participante',
        colorByPoint: true,
        data:[
        ['Mayor', 10],
        ['Moderara', 16],
        ['Independiente', 14],

        ]
        }],

        })
        });

