.form
  = form_for @member, url: center_members_path(@center) do |f|
    - if @member.errors.any?
      #error_explanation
        %h2= "#{pluralize(@member.errors.count, "error")} prohibited this member from being saved:"
        %ul
          - @member.errors.full_messages.each do |msg|
            %li= msg
    
    %section.member
      .two.fields
        .field
          = f.label :name
          = f.text_field :name
        .field
          = f.label :addres
          = f.text_field :addres
        .field
          = f.label :phone
          = f.text_field :phone
        .field
          = f.label :age
          = f.text_field :age
        .field
          = f.label :code
          = f.text_field :code
        .field
          = f.label :status
          = f.text_field :status
    .actions
      = f.submit 'Save', class: "ui right positive button"

= debug  @member.customer
