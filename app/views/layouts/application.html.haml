!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Meridia'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Meridia'}"}
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
  %header#top.navbar.navbar-static-top.bs-docs-nav{role: "banner"}
    .container
      .navbar-header
        %button.navbar-toggle{"data-target" => ".bs-navbar-collapse", "data-toggle" => "collapse", type: "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: "../"} Bootstrap
      %nav.collapse.navbar-collapse.bs-navbar-collapse{role: "navigation"}
        %ul.nav.navbar-nav
          %li
            %a{href: "../getting-started"} Getting started
          %li
            %a{href: "../css"} CSS
          %li
            %a{href: "../components"} Components
          %li
            %a{href: "../javascript"} JavaScript
          %li
            %a{href: "../customize"} Customize
        %ul.nav.navbar-nav.navbar-right
          %li
            %a{href: "http://expo.getbootstrap.com", onclick: "ga('send', 'event', 'Navbar', 'Community links', 'Expo');"} Expo
          %li
            %a{href: "http://blog.getbootstrap.com", onclick: "ga('send', 'event', 'Navbar', 'Community links', 'Blog');"} Blog
      %main.container-fluid
      .general-row
        .col-md-2.main-menu.hidden-xs
          = render 'layouts/navigation'
        .col-md-10.col-md-offset-2
          .title_bar
            = yield :title_breadcrumb
          = render 'layouts/messages'
          = yield
    = yield :footer
    = yield(:javascripts)
