.col-md-4.col-md-offset-7
  .authform
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f|
      %h3 Gerosoft
      = devise_error_messages!
      .form-group
        - if devise_mapping.registerable?
          = link_to 'Sign up', new_registration_path(resource_name), class: 'right'
        = f.email_field :email, :autofocus => true,:placeholder=> "Email", class: 'form-control'
      .form-group
        = f.password_field :password,:placeholder=>"Password", class: 'form-control'
      .form-group
        = f.submit 'Ingresar', :class => 'btn-info button pull-right'
      - if devise_mapping.rememberable?
        .form-group.block
          = f.check_box :remember_me
          = f.label :remember_me, "Recordarme"

      .form-group.forgot
        - if devise_mapping.recoverable?
          .text-center
            = link_to "Olvidaste tú contraseña?", new_password_path(resource_name), class: 'right'
