= form_for @mailbox do |f|
  - if @mailbox.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mailbox.errors.count, "error")} prohibited this mailbox from being saved:"
      %ul
        - @mailbox.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
